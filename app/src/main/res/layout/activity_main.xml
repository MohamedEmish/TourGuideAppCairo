<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.amosh.tourguideapp_cairo.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_historical">

        <TextView
            android:id="@+id/historical"
            style="@style/CategoryStyle"
            android:layout_height="88dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_historical" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_hotels">

        <TextView
            android:id="@+id/hotels"
            style="@style/CategoryStyle"
            android:layout_height="88dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_hotels" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_restaurant">

        <TextView
            android:id="@+id/restaurant"
            style="@style/CategoryStyle"
            android:layout_height="88dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_restaurant" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_markets">

        <TextView
            android:id="@+id/markets"
            style="@style/CategoryStyle"
            android:layout_height="88dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/category_markets" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/intro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/Intro"
        android:textColor="#F4FF81"
        android:textSize="50sp"
        android:textStyle="bold" />

</LinearLayout>